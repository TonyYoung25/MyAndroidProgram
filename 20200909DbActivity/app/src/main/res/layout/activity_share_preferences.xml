<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/spKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="key"></EditText>
    <EditText
        android:id="@+id/spValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="value"></EditText>

    <Button
        android:id="@+id/spRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read"
        android:onClick="spRead"></Button>
    <Button
        android:id="@+id/spWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write"
        android:onClick="spWrite"></Button>
</LinearLayout>